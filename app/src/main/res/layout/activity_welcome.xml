<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <!-- App title -->

    <!-- Tagline -->

    <!-- Logo -->
    <!-- put your PNG/SVG as drawable/logo -->

    <!-- Buttons container -->

    <!-- Continue as Guest -->

    <!-- Footer credit -->

    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="406dp"
        android:layout_height="151dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/guestText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintVertical_bias="0.533">

        <!-- Sign up -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="332dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:text="@string/welcome_signup"
            android:textColor="@color/colorText"
            app:backgroundTint="@color/white"
            app:cornerRadius="24dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <!-- Sign in -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignin"
            android:layout_width="336dp"
            android:layout_height="61dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:text="@string/welcome_signin"
            android:textColor="@color/colorText"
            app:backgroundTint="@color/white"
            app:cornerRadius="24dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/guestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:padding="8dp"
        android:text="@string/continue_as_guest"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/devCredit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/devCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developer_credit"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="381dp"
        android:layout_height="374dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/logo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
