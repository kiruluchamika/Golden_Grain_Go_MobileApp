<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBEF">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†"
            android:textSize="20sp"
            android:paddingEnd="12dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/saved_addresses"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#4A3B2E"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/includeBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Address: Home -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/onboarding_card_bg"
                android:elevation="2dp">

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="ðŸ "
                    android:textSize="20sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_home"
                        android:textStyle="bold"
                        android:textColor="#4A3B2E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_home_line"
                        android:textColor="#6B6B6B"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/editHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœï¸"
                    android:textSize="18sp"
                    android:padding="6dp"/>
            </LinearLayout>

            <!-- Address: Work -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/onboarding_card_bg"
                android:elevation="2dp">

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="ðŸ¢"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_work"
                        android:textStyle="bold"
                        android:textColor="#4A3B2E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_work_line"
                        android:textColor="#6B6B6B"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/editWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœï¸"
                    android:textSize="18sp"
                    android:padding="6dp"/>
            </LinearLayout>

            <!-- Add New Address -->
            <Button
                android:id="@+id/btnAddNew"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:text="@string/add_new_address"
                android:textColor="#000000"
                android:background="@drawable/btn_yellow_rounded"/>

            <!-- Bottom spacer so content clears the nav -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Reusable bottom nav -->
    <include
        android:id="@+id/includeBottom"
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
