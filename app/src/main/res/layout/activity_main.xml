<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBEF">

    <!-- Scrollable content area -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/includeBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Golden Grain Go"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:textColor="#4A3B2E"/>

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/logo1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:contentDescription="avatar"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, ck 👋"
                android:textSize="14sp"
                android:paddingTop="2dp"
                android:textColor="#6B6B6B"/>

            <!-- Search bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/onboarding_card_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    android:text="🔎"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search places"
                    android:padding="0dp" />

                <TextView
                    android:id="@+id/btnFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="⚙️"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Popular products header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular Products"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#3E3E3E"/>

                <TextView
                    android:id="@+id/viewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:textColor="#7A7A7A"/>
            </LinearLayout>

            <!-- Category chips -->
            <HorizontalScrollView
                android:layout_width="372dp"
                android:layout_height="72dp"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chipMostViewed"
                        android:layout_width="wrap_content"
                        android:layout_height="61dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_yellow_rounded"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="Most Viewed"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/chipRice"
                        android:layout_width="117dp"
                        android:layout_height="61dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/onboarding_card_bg"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="Rice" />

                    <TextView
                        android:id="@+id/chipChilies"
                        android:layout_width="123dp"
                        android:layout_height="61dp"
                        android:background="@drawable/onboarding_card_bg"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="chilies" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Horizontal cards (no adapter; simple, reusable) -->
            <HorizontalScrollView
                android:layout_width="383dp"
                android:layout_height="412dp"
                android:layout_marginTop="16dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/cardsRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 1 -->
                    <FrameLayout
                        android:layout_width="227dp"
                        android:layout_height="379dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/onboarding_card_bg"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_onboarding2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#66000000"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Basmathi Rice"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingEnd="8dp"
                                    android:text="📍 Sri Lanka"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⭐ 4.8"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Card 2 -->
                    <FrameLayout
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/onboarding_card_bg"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_onboarding" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#66000000"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Red Rice"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐ 4.6"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- bottom spacer so content doesn't hide behind nav -->
        </LinearLayout>
    </ScrollView>

    <!-- Reusable bottom nav include -->
    <include
        android:id="@+id/includeBottom"
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
