<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_light1"
    tools:context=".PaymentSuccessActivity">

    <!-- Toolbar / Header -->

    <!-- Success Icon with Border -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/order_confirmation"
            android:textAlignment="center"
            android:textColor="@color/text_dark"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="283dp"
        android:layout_height="315dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_box"/>

    <!-- Success Title & Transaction -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_payment_success"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_number"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/text_dark"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_margin="16dp" />

    <!-- Amount & Payment Method -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txtAmountPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_paid"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txtPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_method"
            android:textSize="14sp"
            android:textColor="@color/text_dark"/>
    </LinearLayout>

    <!-- View Order Button -->
    <Button
        android:id="@+id/btnViewOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_order"
        android:backgroundTint="@color/btn_yellow"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
