<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†"
            android:textSize="20sp"
            android:paddingEnd="12dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/payment_methods_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/includeBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Saved Payment Methods -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saved_payment_methods"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorText"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Credit Card -->
            <LinearLayout
                android:id="@+id/rowVisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/onboarding_card_bg">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ðŸ’³"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/credit_card"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/masked_visa"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/deleteVisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—‘ï¸"
                    android:textSize="18sp"
                    android:padding="6dp"/>
            </LinearLayout>

            <!-- Debit Card -->
            <LinearLayout
                android:id="@+id/rowMaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/onboarding_card_bg">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ðŸ’³"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/debit_card"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/masked_master"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/deleteMaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—‘ï¸"
                    android:textSize="18sp"
                    android:padding="6dp"/>
            </LinearLayout>

            <!-- PayPal -->
            <LinearLayout
                android:id="@+id/rowPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/onboarding_card_bg">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ðŸ’¸"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paypal"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paypal_email"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/deletePaypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—‘ï¸"
                    android:textSize="18sp"
                    android:padding="6dp"/>
            </LinearLayout>

            <!-- Apple Pay -->
            <LinearLayout
                android:id="@+id/rowApple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/onboarding_card_bg">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ðŸŽ"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apple_pay"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/masked_apple"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/deleteApple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—‘ï¸"
                    android:textSize="18sp"
                    android:padding="6dp"/>
            </LinearLayout>

            <!-- Add Payment Method -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_payment_method"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorText"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/addCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/onboarding_card_bg">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ’³"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_or_debit_card"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/onboarding_card_bg">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ’¸"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paypal"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addApple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/onboarding_card_bg">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸŽ"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apple_pay"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <include
        android:id="@+id/includeBottom"
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
